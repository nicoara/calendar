@model Calendar.WebUI.Models.CardModel 

@using (Html.BeginForm("AddCard", "Day", FormMethod.Post))
{
    @Html.ValidationSummary()
    <p hidden>c_ID: @Html.TextBoxFor(x => x.cID, new {@Value = Model.cID})</p>
    <p hidden>Day id: @Html.TextBoxFor(x => x.DayId, new {@Value = Model.DayId}) </p>
    <p>Index: @Html.TextBoxFor(x => x.Index, new { Value = "" }) (in locul carui index existent vreau sa pun)</p> 
    <p>Nume: @Html.TextBoxFor(x => x.Name) </p>
    <p>Minute: @Html.TextBoxFor(x => x.Minutes) </p>
    <p>Ora start: @Html.TextBoxFor(x => x.StartHour)</p>
    <p>Ora fixa: @Html.TextBoxFor(x => x.Fixed, new {@Value = false})</p>
    <p>Facut: @Html.TextBoxFor(x => x.Done, new {@Value = false})</p>
    <input type="submit" /> 
}
